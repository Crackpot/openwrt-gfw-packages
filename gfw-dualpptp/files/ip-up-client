
PPP_IFACE="$1";
PPP_TTY="$2";
PPP_SPEED="$3";
PPP_LOCAL="$4";
PPP_REMOTE="$5";
PPP_IPPARAM="$6";

. /lib/functions.sh

local enabled
local interface
local mtu

config_load gfw-dualpptp
config_get_bool enabled general enabled
config_get interface general mainvpnifname
config_get mtu general mainvpnmtu
# wait for /var/state/network
sleep 1
interface=$(uci_get_state network "$interface" ifname "$interface")

ip_up_client() {
        ifconfig $PPP_IFACE mtu $mtu
}

if [ "$PPP_IFACE" == "$interface" -a $enabled -eq 1 ]; then
        ip_up_client
fi

